<h1>Crea tu cuenta</h1>
<%= form_for @usuario do |f| %>
  <% if @usuario.errors.any? %>
    <div class="error_messages">
      <h2>No coinciden las contraseñas</h2>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :contraseña %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :confirmar_contraseña %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions"><%= f.submit "Regístrate!" %></div>
<% end %>